<template>
    <p id="CONTENT">{value}</p>
    <button id="BUTTON" :click="|_, _| {
        let comp = self.weak();
        after(move || change(comp.clone()), 100);
    }"></button>
</template>

<define>
use fluent_web_runtime::after;

fn change(comp: CompRef<Component>) {
    unpack!(comp, value);

    *value = 10;
}
</define>

<data>
let mut value: i32 = 0;
</data>

<define>
use std::str::FromStr;
</define>

<generic>
<T> where T: FromStr + UseInEvent + 'static
</generic>

<events>
pub struct input<T> {
    pub value: T
}
</events>

<template>
    <input :input="
    if let Ok(value) = element.value().parse() {
        self.emit(input {value});
    }
    ">
</template>